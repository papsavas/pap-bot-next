{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "ES2017",
		"lib": ["ES2021"],
		"noEmit": false,
		"rootDir": ".",
		"outDir": "./dist",
		"downlevelIteration": true
	},

	"module": "esnext",
	"include": ["src/**/*.ts", "**/*.d.ts"],
	"exclude": ["node_modules", "**/scripts/local"]
}
